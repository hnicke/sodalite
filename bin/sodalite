#!/bin/bash  

function reset {
    # enable control flow keys
    stty ixany 2> /dev/null
}

trap reset SIGINT SIGTERM

# disable control flow keys
stty -ixon 2> /dev/null

## set up environment
APPNAME=sodalite
LIB_DIR="${LIB_DIR:-$(dirname $(readlink -f "$0"))/../sodalite}"

python3 -m sodalite $@
