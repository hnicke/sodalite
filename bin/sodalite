#!/bin/bash  

## set up environment
APPNAME=sodalite
PROJECT_ROOT=$(dirname $(readlink -f "$0"))/..
LIB_DIR="${LIB_DIR:-$PROJECT_ROOT/sodalite}"

CWD_PIPE=$(mktemp -u "${TMPDIR:-/tmp/}$(basename $0).XXXXXXXX")
mkfifo $CWD_PIPE
trap "rm -f $CWD_PIPE" EXIT
exec 3< <(read line <$CWD_PIPE; echo $line)

export CWD_PIPE
python $LIB_DIR/main.py < /dev/tty > /dev/tty

read <&3 line
[ $line ] && echo "$line"
