#!/bin/bash  

# build man page
cd docs
for manpage in sodalite sodalite-open; do
    pandoc --standalone --to man $manpage.1.md -o $manpage.1 &&
    # remove pandoc version, it could be slightly different on every machine
    sed -i 's/\(Automatically generated by Pandoc\).*/\1/' $manpage.1
    git add $manpage.1
done
